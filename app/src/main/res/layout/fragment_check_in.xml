<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_in_title" />

    <EditText
        android:id="@+id/check_in_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a title" />

    <EditText
        android:id="@+id/check_in_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a place" />

    <EditText
        android:id="@+id/check_in_details_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter details" />

    <Button
        android:id="@+id/date_picker_title"
        android:layout_width="match_parent"
        android:layout_height="37dp" />

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_in_location" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="233dp" />
    <!--android:src="@drawable/android"/>-->

    <Button
        android:id="@+id/btnChangeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Image" />

    <Button
        android:id="@+id/shareInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share information" />

</LinearLayout>